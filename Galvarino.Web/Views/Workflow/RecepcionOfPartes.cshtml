@{
    ViewData["Title"] = "Recepción de Oficina de Partes";
}

@section breadcumbs{
    <li><a href="#"><i class="demo-pli-home"></i></a></li>
    <li>Etapas</li>
    <li class="active">@ViewData["Title"]</li>
}

@section script{
 <!--Page Script-->
<environment include="Development">
    <script src="~/js/recepcionOfPartes.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/recepcionOfPartes.min.js?g=@Guid.NewGuid().ToString()"></script>
</environment>

}

<div class="row">
    <div class="col-sm-6 table-toolbar-left">    
        <form id="form-pistoleo">
            <div class="input-group mar-btm">
                <span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span>
                <input class="form-control" placeholder="Pistolear" type="text" id="codigoSeguimiento" autocomplete="off">
            </div>
        </form>                  
        
    </div>
    <div class="col-sm-6">
        <a href="/salidas/pdf/detalle-valijas-diario" target="_blank" class="btn btn-primary">Ver Informe diario</a>
    </div>
</div>
<div class="row">
    <table id="tabla-generica" data-toggle="table"
                    data-url="/api/app/v1/listar-valijas-enviadas/OF_PARTES"
                    data-search="false"
                    data-show-refresh="false"
                    data-show-toggle="false"
                    data-show-columns="false"
                    data-sort-name="FechaEnvio"
                    data-sort-order="desc"
                    data-page-list="[]"
                    data-page-size="20"
                    data-pagination="true" data-show-pagination-switch="false">
        <thead>
            <tr>
                <th data-field="codigoSeguimiento" data-align="center" data-sortable="true">Folio Valija</th>
                <th data-field="nroExpedientes" data-align="center" data-sortable="true">N° Expedientes</th>
                <th data-field="fechaEnvio" data-align="center" data-sortable="true" data-formatter="formatoFecha">Fecha Envío</th>
                <th data-field="nombreOficina" data-align="center" data-sortable="true">Oficina Envío</th>
            </tr>
        </thead>
    </table>
</div>
