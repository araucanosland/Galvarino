@{
    ViewData["Title"] = "Mis Solicitudes";
}

@section breadcumbs{
    <li><a href="#"><i class="demo-pli-home"></i></a></li>
    <li>Etapas</li>
    
    @if((string)ViewData["etapaIn"] != "")
    {
        <li>@ViewData["Title"]</li>
        <li class="active">@ViewData["etapaIn"]</li>
    }
    else
    {
        <li class="active">@ViewData["Title"]</li>
    }
}

@section style{
    <!--Bootstrap Table-->
    <link href="~/lib/css/bootstrap-table.min.css" rel="stylesheet">
}

@section script{
     <!--Page Script-->
    <environment include="Development">
        <script src="~/lib/js/bootstrap-table.min.js"></script>
        <script src="~/js/mis-solicitudes.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/mis-solicitudes.min.js"></script>
    </environment>
}



<table data-toggle="table"
                data-url="/api/wf/v1/mis-solicitudes"
                data-search="true"
                data-show-refresh="true"
                data-show-toggle="true"
                data-show-columns="true"
                data-sort-name="id"
                data-page-list="[]"
                data-page-size="20"
                data-pagination="true" data-show-pagination-switch="false">
    <thead>
        <tr>
            <th data-field="credito.folioCredito" data-sortable="true">Folio Credito</th>
            <th data-field="credito.montoCredito" data-sortable="true">Documentos</th>
            <th data-field="credito.fechaDesembolso" data-sortable="true" data-formatter="formatoFecha">Fecha Desembolso</th>
            <th data-field="credito.montoCredito" data-align="center" data-sortable="true" >Monto Credito</th>
            <th data-field="tarea.etapa.nombre" data-align="center" data-sortable="true">Etapa</th>
            <th data-field="track" data-align="center" data-sortable="true" data-formatter="trackFormatter">Tracking Pack</th>
        </tr>
    </thead>
</table>