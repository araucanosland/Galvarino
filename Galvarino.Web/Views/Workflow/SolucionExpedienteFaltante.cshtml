@{
    ViewData["Title"] = "Solucionar Expediente Faltante";
}

@section breadcumbs{
    <li><a href="#"><i class="demo-pli-home"></i></a></li>
    <li>Etapas</li>
    <li class="active">@ViewData["Title"]</li>
}

@section script{

 <!--Page Script-->
<environment include="Development">
    <script src="~/js/solicionDocsFaltantes.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/solicionDocsFaltantes.min.js?g=@Guid.NewGuid().ToString()"></script>
</environment>

}

<div class="row">
    <div class="col-sm-6 table-toolbar-left">                      
        <div class="btn-group">
            <button class="btn btn-primary" id="btn-generar-generico" type="button"><i class="glyphicon glyphicon-list-alt"></i> Reparos Resueltos</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="alert alert-info"><strong>Recuerda!</strong> debes seleccionar los documentos que ya estan reparados para resolverlos.</div>
    </div>
</div>
<div class="row">
    <table          id="tabla-generica" 
                    data-toggle="table"
                    data-url="/api/wf/v1/mis-solicitudes/@ProcesoDocumentos.ETAPA_DOCUMENTACION_FALTANTE"
                    data-search="false"
                    data-show-refresh="false"
                    data-show-toggle="false"
                    data-show-columns="false"
                    data-sort-name="fechaEnvioValija"
                    data-page-list="[]"
                    data-page-size="40"
                    data-pagination="true" 
                    data-side-pagination="server"
                    data-show-pagination-switch="false"
                    data-locale="es-CL">
        <thead>
            <tr>
                <th data-checkbox="true">Resuelto</th>
                <th data-field="reparo" data-formatter="formatoReparo">Doc. Faltante</th>
                <th data-field="folioCredito" data-sortable="true">Folio Crédito</th>
                <th data-field="rutCliente" data-align="center" data-sortable="true" >Rut Afiliado</th>
                <th data-field="tipoCredito" data-sortable="true" data-formatter="formatoTipoCredito">Tipo Crédito</th>
                <th data-field="folioCredito" data-align="left" data-sortable="false" data-formatter="formatoListaDocumentos">Documentos</th>
                <th data-field="fechaDesembolso" data-sortable="true" data-formatter="formatoFecha">Fecha Colocación</th>
                <th data-field="fechaEnvioValija" data-align="center" data-sortable="true" data-formatter="formatoFecha">Fec. Envío Sucursal</th>
                <th data-field="seguimientoValija" data-align="center" data-sortable="true">Valija</th>
            </tr>
        </thead>
    </table>
</div>

