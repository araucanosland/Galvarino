<div class="row">
    <form id="form-busqueda" class="col-sm-8">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <input type="text" id="inputBusqueda" class="form-control" placeholder="Ingresa el Folio del Credito" />

                </div>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-sm-3 text-left" id="datos-credito">
    </div>
    <div class="col-sm-3 text-left hidden" id="datos-workflow">
    </div>
    <div class="col-sm-3 text-left" id="oficina-oferta">
    </div>
    <div class="col-sm-3 text-left" id="oficina-colocacion">
    </div>
</div>
<div class="col-lg-4">
    <h4>Datos del Credito</h4>
    <table class="table text-left">
        <tr>
            <td><strong>Folio</strong></td>
            <td><label id="folio-credito"></label></td>
        </tr>
        <tr>
            <td><strong>Rut Afiliado</strong></td>
            <td><label id="rut-afiliado"></label></td>
        </tr>
        <tr>
            <td><strong>Etapa Actual</strong></td>
            <td><label id="etapa-actual"></label></td>
        </tr>
        <tr>
            <td><strong>Asignado A</strong></td>
            <td><label id="asignado-a"></label></td>
        </tr>
        <tr></tr>



    </table>
</div>

<div class="col-sm-10">
    <div class="col-lg-5">
        <small>Seleccione Etapa</small>
        <select class="form-control" id="cmb_etapas"></select>

    </div>


</div>

<div class="col-sm-10">
    <div class="col-lg-5">
        <div class="btn-group mar-top">
            <input type="hidden" id="folio-credito" value="" />
            <button id="btn_modificar" class="btn btn-primary">Guardar Cambios</button>
        </div>
        <div class="btn-group mar-top">
            <button id="btn_nuevo" onclick="Limpiar()" style="margin-right: 150px;" class="btn btn-info">Nueva Consulta</button>
        </div>
    </div>
</div>

